<div class="login-panel panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">パスワード再設定</h3>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |form| %>
      <fieldset>
        <div class="form-group">
          <%= form.label :password %><br />
          <%= form.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'password' %>
        </div>

        <div class="form-group">
          <%= form.label :password_confirmation %><br />
          <%= form.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'password' %>
        </div>

        <%= form.submit 'パスワードを変更する', class: 'btn btn-lg btn-success btn-block' %>
      </fieldset>
    <% end %>
  </div>
  <div class="panel-footer">
    <%= render 'users/shared/links' %>
  </div>
</div>
