<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default mt-2">
      <div class="panel-heading">
        <h2><%= @article.title %></h2>
        <p class="text-right">
          <%= @article.user&.name %>
          投稿日時 <%= l(@article.created_at, format: :default) %>
        </p>
      </div>

      <div class="panel-body">
        <div class="markdown border-bottom mb-1">
          <%= simple_format(@article.content) %>
        </div>

        <div class="text-right">
          <%= link_to '編集', edit_article_path(@article), class: 'btn btn-info' %>
          <%= link_to '削除', article_path(@article), method: :delete, class: 'btn btn-danger' %>
        </div>
      </div>
    </div>
  </div>
</div>